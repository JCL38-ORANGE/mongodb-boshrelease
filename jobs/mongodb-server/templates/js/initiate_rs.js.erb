<%- if p("mongodb.Db_Type") == "rs"
	DbTypeport=p("mongodb.rs_port")
end
Conf_replSetName = p("mongodb.Conf_replSetName")
Conf_bindIp = link('server').instances[0].address
if p("mongodb.Db_Type") == "sh"
  DbTypeport=p("mongodb.sh_port")
end
if p("mongodb.Db_Type") == "cfg"
  DbTypeport=p("mongodb.cfg_port")
end
if p("mongodb.Db_Type") == "mongos"
  DbTypeport=p("mongodb.mongos_port")
end -%>
rs.initiate( {
   _id : "<%= Conf_replSetName %>",
   members: [ { _id : 0, host : "<%= Conf_bindIp %>:<%= DbTypeport %>" } ]
} )