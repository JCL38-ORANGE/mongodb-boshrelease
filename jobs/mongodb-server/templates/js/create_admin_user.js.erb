use admin
if (db.system.users.find({user:'<%= p("mongodb-server.mongo_DbUserAdminName") %>'}).count() == 0) {
  db.createUser(
  {
    user: "<%= p("mongodb-server.mongo_DbUserAdminName") %>",
    pwd: "<%= p("mongodb-server.mongo_DbUserAdminPwd") %>",
    roles: [ { role: "userAdminAnyDatabase", db: "admin" } ]
  }
)
} else {
  db.changeUserPassword("<%= p("mongodb-server.mongo_DbUserAdminName") %>","<%= p("mongodb-server.mongo_DbUserAdminPwd") %>")
}
