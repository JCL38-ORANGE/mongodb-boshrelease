use admin
if (db.system.users.find({user:'<%= p("mongodb.admin_username") %>'}).count() == 0) {
  db.createUser(
  {
    user: "<%= p("mongodb.admin_username") %>",
    pwd: "<%= p("mongodb.admin_password") %>",
    roles: [ { role: "userAdminAnyDatabase", db: "admin" } ]
  }
)
} else {
  db.changeUserPassword("<%= p("mongodb.admin_username") %>","<%= p("mongodb.admin_password") %>")
}
