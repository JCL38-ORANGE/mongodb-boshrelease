use admin
if (db.system.users.find({user:'<%= p("mongodb-server.Db_UserAdminName") %>'}).count() == 0) {
  db.createUser(
  {
    user: "<%= p("mongodb-server.Db_UserAdminName") %>",
    pwd: "<%= p("mongodb-server.Db_UserAdminPwd") %>",
    roles: [ { role: "userAdminAnyDatabase", db: "admin" } ]
  }
)
} else {
  db.changeUserPassword("<%= p("mongodb-server.Db_UserAdminName") %>","<%= p("mongodb-server.Db_UserAdminPwd") %>")
}
